datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @unique
  name        String
  email       String   @unique
  role        String
  department  String
  manager     String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  tickets     Ticket[]

  @@map("user")
}

model Ticket {
  id              String @id @default(uuid())
  user User @relation(fields: [opened_by], references: [id])
  opened_by       String
  assigned_to     String
  title           String
  description     String
  from_department String
  to_department   String
  approver        String
  approved        Boolean @default(false)
  status          String  @default("awaiting approval")
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  @@map("ticket")
}